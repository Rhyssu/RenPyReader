<div class="file-memory-usage-wrapper">
    <label>
        <strong>
            Current memory usage (MB):
        </strong>
    </label>
    @{
        string mem = string.Empty;
        if (memoryUsage != 0)
        {
            mem = Math.Round(memoryUsage / 1048576.0M, 2)
            .ToString();
        }
    }
    <TextInput @bind-Value="@mem" Disabled="true" />
    <span class="form-text">
        Hint: Approximated amount of memory allocated.
    </span>
</div>